{
  "name": "bitchat-in-browser",
  "version": "1.0.0",
  "description": "BitChat In Browser - Progressive Web App for encrypted mesh-style messaging via Nostr protocol. Interoperates with native iOS and Android BitChat apps.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/permissionlesstech/bitchat-in-browser.git"
  },
  "homepage": "https://bitbrowse.eth.limo",
  "bugs": {
    "url": "https://github.com/permissionlesstech/bitchat-in-browser/issues"
  },
  "license": "MIT",
  "author": "Permissionless Technologies",
  "keywords": [
    "pwa",
    "nostr",
    "encrypted-messaging",
    "mesh-messaging",
    "decentralized",
    "ipfs",
    "ens",
    "offline-first",
    "preact",
    "webrtc"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "vitest run --coverage && playwright test",
    "test:bench": "vitest run src/__benchmarks__",
    "test:bench:crypto": "vitest run src/__benchmarks__/crypto.bench.ts",
    "test:bench:storage": "vitest run src/__benchmarks__/storage.bench.ts",
    "test:bench:rendering": "vitest run src/__benchmarks__/rendering.bench.ts",
    "test:perf": "playwright test e2e/performance.spec.ts",
    "test:perf:benchmarks": "playwright test e2e/performance/benchmarks.spec.ts",
    "test:visual": "playwright test --project=visual",
    "test:visual:update": "playwright test --project=visual --update-snapshots",
    "test:visual:screenshots": "playwright test e2e/visual/screenshots.spec.ts",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "analyze:bundle": "npx tsx scripts/bundle-analyze.ts",
    "perf:all": "npm run test:bench && npm run analyze:bundle && npm run test:perf:benchmarks",
    "deploy:ipfs": "node scripts/deploy-ipfs.js",
    "generate:icons": "npx ts-node scripts/generate-icons.ts",
    "generate:splash": "npx ts-node scripts/generate-splash.ts",
    "generate:pwa-assets": "npm run generate:icons && npm run generate:splash",
    "test:security": "vitest run src/__security__/",
    "test:security:watch": "vitest src/__security__/",
    "security:scan": "npx tsx scripts/security-scan.ts",
    "security:audit": "npm audit && npm run security:scan",
    "security:all": "npm run test:security && npm run security:scan",
    "monitor:gateways": "npx tsx scripts/monitor-gateways.ts",
    "monitor:canary": "npx tsx scripts/synthetic-canary.ts",
    "monitor:report": "npx tsx scripts/monitor-gateways.ts --report && npx tsx scripts/synthetic-canary.ts --report",
    "rollback:status": "npx tsx scripts/rollback.ts status",
    "rollback:check": "npx tsx scripts/rollback.ts check",
    "rollback:execute": "npx tsx scripts/rollback.ts rollback"
  },
  "dependencies": {
    "dexie": "^3.2.4",
    "jsqr": "^1.4.0",
    "libsodium-wrappers-sumo": "^0.7.13",
    "nostr-tools": "^2.1.4",
    "preact": "^10.19.3",
    "preact-router": "^4.1.2",
    "qrcode": "^1.5.4",
    "trystero": "^0.18.0",
    "workbox-window": "^7.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.40.1",
    "@preact/preset-vite": "^2.8.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.3",
    "@types/libsodium-wrappers-sumo": "^0.7.8",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-preact": "^0.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fake-indexeddb": "^5.0.0",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults and supports es6-module"
  ]
}
